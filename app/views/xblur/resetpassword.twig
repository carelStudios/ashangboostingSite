      <div id="block_105"style="height:100vh;">
          <div class="bg" style="background-image: url('app/views/xblur/image/Background.png');"></div>
    <div class="sign-in">
        <div class="bg"></div>
        <div class="divider-top"></div>
        <div class="divider-bottom"></div>
        <div class="container">
            <div class="row sign-up-center-alignment" style="justify-content: center; margin-top:50px">
                <div class="col-lg-5 col-md-6 col-sm-12 lud">
                    <div class="component_card">
                        
   
    <div class="col-md-12">

      {% if errorText %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ successText }}
        </div>
      {% endif %}
<div class="login-box up">
      <div class="well">
        <form method="post" action="">

          <div class="form-group">
            <label for="email" class="control-label">{{ lang['resetpassword.user'] }}</label>
            <input type="text" class="form-contro" name="user" value="{{ data['user'] }}" placeholder="{{ lang['resetpassword.user.placeholder'] }}">
          </div>


          {% if captcha %}
            <div class="form-group">
              <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}

            <button type="submit" class="btn btn-block btn-big-primary">{{ lang['resetpassword.button'] }}</button>
        </form>
      </div>
    </div>
